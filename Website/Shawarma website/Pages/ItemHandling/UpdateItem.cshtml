@page
@model Shawarma_website.Pages.ItemHandling.UpdateItemModel
@{
}
<a>@Model.Message</a>
@if (Model.Type == "NORMAL")
{
    <H4>Normal item</H4>
    <h5>Id: @Model.NormalItem.Id</h5>
    <div class="inputContainer">
        <form  method="post">
            <label>Item Name</label>
            <span asp-validation-for="NormalItem.Name"></span>
            <input type="text" asp-for="NormalItem.Name" asp-for="NormalItem.Name" placeholder="Item name">

            <label>Description</label>
            <span asp-validation-for="NormalItem.Description"></span>
            <textarea class="DescriptionForCreatingItem" placeholder="Description" asp-for="NormalItem.Description"></textarea>

            <label>Price</label>
            <span asp-validation-for="NormalItem.Price"></span>
            <input type="text" asp-for="NormalItem.Price" placeholder="Price">

            <label>Discount percentage</label>
            <input type="text" asp-for="NormalItem.Discount" value="0" placeholder="Discount percentage">


            <label>Category</label>
            <span asp-validation-for="NormalItem.Category"></span>
            <select asp-for="NormalItem.Category">
                <option value="POPULARDISHES">Popular dishes</option>
                <option value="STARTERS">Starters</option>
                <option value="SANDWICHES">Sandwiches</option>
                <option value="BURGERS">Burgers</option>
                <option value="DISHES">Dishes</option>
                <option value="DRINKS">Drinks</option>
                <option value="COCKTAILS">Cocktails</option>
            </select>
            <input type="submit" value="Update">
            <input type="hidden" name="id" value="@Model.NormalItem.Id" />
        </form>
    </div>
}
