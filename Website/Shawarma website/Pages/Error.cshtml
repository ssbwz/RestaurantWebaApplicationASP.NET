@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}


@if (Model.Code != null)
{
    <h1 class="text-danger">Error.</h1>
    <h3 class="text-danger">An error occurred while processing your request.</h3>
    <h4 class="text-danger">Error code: @Model.Code</h4>
}
else
{
    <h1 class="text-danger">Error.</h1>
    <h3 class="text-danger">An error occurred while processing your request.</h3>
}
